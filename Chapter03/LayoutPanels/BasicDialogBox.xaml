<Window
    x:Class="LayoutPanels.BasicDialogBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="BasicDialogBox"
    Height="300"
    Width="300"
    MinHeight="150"
    MinWidth="200">
    <DockPanel
        LastChildFill="True">
        <StackPanel
            DockPanel.Dock="Bottom"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Margin="10,10,2,10"
                Padding="3"
                Content="OK" />
            <Button
                Margin="2,10,10,10"
                Padding="3,3,3,3"
                Content="Cancel" />
        </StackPanel>
        <TextBox
            DockPanel.Dock="Top"
            Margin="10"
            Text="This is a test." />
    </DockPanel>
</Window>
