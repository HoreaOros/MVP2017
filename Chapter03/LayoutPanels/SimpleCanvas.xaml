<Window
    x:Class="LayoutPanels.SimpleCanvas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="LayoutPanels"
    Height="241.6"
    Width="240">
    <Canvas
        x:Name="mycanvas">
        <Rectangle
            Canvas.Top="66"
            Canvas.Left="170"
            Width="30"
            Height="40"
            Stroke="#FFEE3F3F"
            StrokeThickness="6"
            RadiusX="3"
            RadiusY="3"></Rectangle>
        <Button
            Canvas.Left="10"
            Canvas.Top="10"
            Click="Button_Click">(10,10)</Button>
        <Button
            Canvas.Left="120"
            Canvas.Top="30">(120,30)</Button>
        <Button
            Canvas.Left="60"
            Canvas.Top="80"
            Width="50"
            Height="50">(60,80)</Button>
        <Button
            Canvas.Left="70"
            Canvas.Top="120"
            Width="100"
            Height="50">(70,120)</Button>
    </Canvas>
</Window>
